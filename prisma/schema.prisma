generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String  @id @default(uuid())
    name        String  @db.VarChar(100)
    email       String  @unique
    password    String
    phoneNumber String? @db.VarChar(13)
    address     String?
    country     String?

    currentSaving Float @default(0) // tabungan saat ini (initial + income - expense)
    totalIncome   Float @default(0) // total semua income dari tracking
    totalExpense  Float @default(0) // total semua expense dari tracking
    avgIncome     Float @default(0) // rata-rata income (opsional)
    avgExpense    Float @default(0) // rata-rata expense (opsional)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    targets   Target[]
    trackings Tracking[]
}

model Target {
    id     String @id @default(uuid())
    userId String
    user   User   @relation(fields: [userId], references: [id])

    name            String        @unique
    targetAmount    Float
    duration        String
    initialSaving   Float
    incomeFrequency FrequencyType
    fixedIncome     Float
    isCompleted     Boolean       @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    trackings Tracking[]
}

model Tracking {
    id     String @id @default(uuid())
    userId String
    user   User   @relation(fields: [userId], references: [id])

    targetId String
    target   Target @relation(fields: [targetId], references: [id], onDelete: Cascade)

    type      RecordType
    category  String
    amount    Float
    notes     String?
    createdAt DateTime   @default(now())
}

enum RecordType {
    income
    expense
}

enum FrequencyType {
    daily
    weekly
    monthly
}
