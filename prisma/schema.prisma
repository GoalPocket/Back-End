generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String  @id @default(uuid())
    name        String  @db.VarChar(100)
    email       String  @unique
    password    String
    phoneNumber String? @db.VarChar(13)
    address     String?
    country     String?

    currentSaving Float @default(0)
    totalIncome   Float @default(0)
    totalExpense  Float @default(0)
    avgIncome     Float @default(0)
    avgExpense    Float @default(0)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    targets   Target[] // relasi Target.user akan ada cascade delete
    trackings Tracking[] // relasi Tracking.user akan ada cascade delete
}

model Target {
    id     String @id @default(uuid())
    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    name            String
    targetAmount    Float
    duration        String
    initialSaving   Float
    incomeFrequency FrequencyType
    fixedIncome     Float         @default(0)
    fixedOutcome    Float         @default(0)
    isCompleted     Boolean       @default(false)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    trackings Tracking[] // relasi Tracking.target akan ada cascade delete

    @@unique([userId, name])
}

model Tracking {
    id     String @id @default(uuid())
    userId String
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    targetId String
    target   Target @relation(fields: [targetId], references: [id], onDelete: Cascade)

    type      RecordType
    category  String
    amount    Float
    notes     String?
    createdAt DateTime   @default(now())
}

enum RecordType {
    income
    expense
}

enum FrequencyType {
    daily
    weekly
    monthly
}
